<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context
        				http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="org.btkj.bihu.vehicle" />
	
	<context:property-placeholder location="classpath:conf/bihu.properties"/>
	
	<bean class="org.rapid.util.common.SpringContextUtil" />
	
	<bean id="httpProxy" class="org.rapid.util.net.http.HttpProxy" init-method="init">
		<property name="syncHttp">
			<bean class="org.rapid.util.net.http.SyncHttpAdapter" />
		</property>
	</bean>
	
	<bean id="biHuAreaMapper" class="org.btkj.bihu.vehicle.redis.BiHuAreaMapper">
		<property name="redis" ref="redis" />
		<property name="dao" ref="biHuAreaDao" />
	</bean>
	
	<bean id="tenantConfigMapper" class="org.btkj.bihu.vehicle.redis.TenantConfigMapper">
		<property name="redis" ref="redis" />
		<property name="dao" ref="tenantConfigDao" />
	</bean>
</beans>