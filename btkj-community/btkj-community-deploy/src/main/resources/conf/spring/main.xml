<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context
        				http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="org.btkj.community" />
	
	<bean class="org.rapid.util.common.SpringContextUtil" />
	
	<bean id="commentMapper" class="org.btkj.community.redis.CommentMapper">
		<property name="tx" ref="tx" />
		<property name="redis" ref="redis" />
		<property name="dao" ref="commentDao" />
	</bean>
	
	<bean id="articleMapper" class="org.btkj.community.redis.ArticleMapper">
		<property name="redis" ref="redis" />
		<property name="dao" ref="articleDao" />
	</bean>
</beans>