<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context
        				http://www.springframework.org/schema/context/spring-context.xsd">
        				
    <context:component-scan base-package="org.btkj.common" />
        				
	<bean class="org.rapid.util.common.SpringContextUtil" />
	
	<bean class = "org.btkj.common.web.Config">
		<property name="userNameLen" value="${user.name.len}" />
	</bean>
	
	<bean class="org.btkj.web.util.ParamsUtil">
		<property name="userService" ref="userService" />
		<property name="cacheService" ref="cacheService" />
		<property name="employeeService" ref="employeeService" />
	</bean>
</beans>